#! /usr/bin/env bash

idle_status() {
	systemctl --user status idle.service &>/dev/null
	return $?
}

template='status|bool'
fifo=/var/tmp/idle-status
status=idle_status

if $status; then
	systemctl --user stop idle.service
	echo "$template|false" >$fifo
else
	systemctl --user start idle.service
	echo "$template|true" >$fifo
fi
