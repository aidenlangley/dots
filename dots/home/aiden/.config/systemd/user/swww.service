[Unit]
Description=Change wallpaper via swww

After=graphical-session-pre.target
PartOf=graphical-session.target

Wants=swww.timer

OnFailure=notify-err@%n

[Service]
Type=oneshot
Environment=SWWW_TRANSITION_FPS=60 SWWW_TRANSITION_STEP=2 SWWW_TRANSITION_TYPE=center
ExecStart=-%h/.local/bin/swww-refresh %h/Wallpapers
