profile {
  output eDP-1 enable
  exec systemctl --user restart bar
  exec systemctl --user stop bar.laptop
  exec wpaperd
}

profile {
  output eDP-1 enable position 1920,0
  output HDMI-A-1 enable position 0,0
  exec systemctl --user restart bar
  exec systemctl --user start bar.laptop
  exec wpaperd
}

profile {
  output DP-1 enable mode 2560x1440
}
